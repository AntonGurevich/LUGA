<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false">

    <!-- Acteamity logo on top middle (like login: 160dp) -->
    <ImageView
        android:id="@+id/central_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/acteamity_logo1" />

    <!-- Permission Status Indicators -->
    <LinearLayout
        android:id="@+id/permissionIndicators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/central_logo">

        <!-- Activity Recognition Permission -->
        <LinearLayout
            android:id="@+id/activityRecognitionIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/activityRecognitionIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="Activity Recognition Permission"
                android:src="@android:drawable/ic_menu_directions" />

            <TextView
                android:id="@+id/activityRecognitionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Activity"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/activityRecognitionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pending"
                android:textColor="@android:color/black"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Body Sensors Permission -->
        <LinearLayout
            android:id="@+id/bodySensorsIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/bodySensorsIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="Body Sensors Permission"
                android:src="@android:drawable/ic_menu_compass" />

            <TextView
                android:id="@+id/bodySensorsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sensors"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/bodySensorsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pending"
                android:textColor="@android:color/black"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Google Fit Permission -->
        <LinearLayout
            android:id="@+id/googleFitIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/googleFitIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="Google Fit Permission"
                android:src="@android:drawable/ic_menu_share" />

            <TextView
                android:id="@+id/googleFitText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Google Fit"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/googleFitStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pending"
                android:textColor="@android:color/black"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Google Account Status -->
        <LinearLayout
            android:id="@+id/googleAccountIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/googleAccountIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="Google Account Status"
                android:src="@android:drawable/ic_menu_myplaces" />

            <TextView
                android:id="@+id/googleAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Account"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/googleAccountStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pending"
                android:textColor="@android:color/black"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tokenCounterArea"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/permissionIndicators">

        <!-- Exchangeable tokens: circle + text -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBarExTokens"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cpb_background_progressbar_color="@color/beaver"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progress="10"
                app:cpb_progress_direction="to_right"
                app:cpb_progress_max="30"
                app:cpb_progressbar_color="@color/gold"
                app:cpb_progressbar_width="10dp"
                app:cpb_round_border="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/circularProgressBarExTokens"
                app:layout_constraintEnd_toEndOf="@+id/circularProgressBarExTokens"
                app:layout_constraintStart_toStartOf="@+id/circularProgressBarExTokens"
                app:layout_constraintTop_toTopOf="@+id/circularProgressBarExTokens">


                <TextView
                    android:id="@+id/tvExTokens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Exchangible\nTokens"
                    android:textColor="@color/luga_blue" />

                <TextView
                    android:id="@+id/tvExTokensBal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="10/30"
                    android:textColor="@color/luga_blue" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Non-exchangeable tokens: coins icon (42dp) with text below (no circle) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:gravity="center"
            android:minWidth="100dp"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/coinsIconNonEx"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:contentDescription="Non-exchangeable tokens"
                android:scaleType="fitCenter"
                android:src="@drawable/coins" />

            <TextView
                android:id="@+id/tvNonExTokens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Non-Exch.\nTokens"
                android:textColor="@color/luga_blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNonExTokensBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0/30"
                android:textColor="@color/luga_blue"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activitiesArrea"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@null"
        android:clipChildren="false"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tokenCounterArea">

        <!-- Steps Activity Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Steps Progress Circle Container (like token circles: 72dp) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="72dp"
                android:layout_height="72dp">

                <!-- Steps Progress Circle -->
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBarSteps"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cpb_background_progressbar_color="@color/teal_200"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress="740"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progress_max="10000"
                    app:cpb_progressbar_color="@color/teal_700"
                    app:cpb_progressbar_width="8dp"
                    app:cpb_round_border="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Steps icon (run drawable) -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Steps"
                    android:src="@drawable/run"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Steps Text Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStepsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps to next token"
                    android:textColor="@color/luga_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStepsProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3834/10000"
                    android:textColor="@color/luga_blue"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Cycling Activity Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Cycling Progress Circle Container (like token circles: 72dp) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="72dp"
                android:layout_height="72dp">

                <!-- Cycling Progress Circle -->
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBarCycling"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cpb_background_progressbar_color="@color/teal_200"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress="0"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progress_max="100"
                    app:cpb_progressbar_color="@color/teal_700"
                    app:cpb_progressbar_width="8dp"
                    app:cpb_round_border="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Cycling icon (bike drawable) -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Cycling"
                    android:src="@drawable/bike"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Cycling Text Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCyclingHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cycling to next token"
                    android:textColor="@color/luga_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCyclingProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0m"
                    android:textColor="@color/luga_blue"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Swimming Activity Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Swimming Progress Circle Container (like token circles: 72dp) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="72dp"
                android:layout_height="72dp">

                <!-- Swimming Progress Circle -->
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBarSwimming"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cpb_background_progressbar_color="@color/teal_200"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress="0"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progress_max="100"
                    app:cpb_progressbar_color="@color/teal_700"
                    app:cpb_progressbar_width="8dp"
                    app:cpb_round_border="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Swimming icon (swim drawable) -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Swimming"
                    android:src="@drawable/swim"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Swimming Text Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSwimmingHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swimming to next token"
                    android:textColor="@color/luga_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSwimmingProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0m"
                    android:textColor="@color/luga_blue"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitiesArrea" />
</androidx.constraintlayout.widget.ConstraintLayout>