<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Disable cleartext traffic by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Specific domain configuration for Supabase -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">ipdxcbuvvlshkzgycrer.supabase.co</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
</network-security-config>

